[core]
    editor = code --wait
    excludesfile = ~/.gitignore_global

[diff]
    algorithm = histogram
    tool = vscode

[difftool]
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[init]
    defaultBranch = main

[merge]
    conflictstyle = zdiff3
    tool = vscode

[mergetool]
    keepBackup = false

[mergetool "vscode"]
    cmd = code --wait $MERGED

[pull]
    rebase = true

[push]
    autoSetupRemote = true

