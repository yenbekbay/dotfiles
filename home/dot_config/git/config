[commit]
    gpgsign = true

[core]
    editor = code --wait
    excludesfile = ~/.config/git/ignore

[diff]
    algorithm = histogram
    tool = vscode

[difftool]
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[gpg]
    format = ssh

[gpg "ssh"]
    allowedSignersFile = ~/.config/git/allowed_signers

[init]
    defaultBranch = main

[merge]
    conflictstyle = zdiff3
    tool = vscode

[mergetool]
    keepBackup = false

[mergetool "vscode"]
    cmd = code --wait $MERGED

[pull]
    rebase = true

[push]
    autoSetupRemote = true

