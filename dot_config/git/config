[core]
    pager = delta
    excludesfile = ~/.gitignore_global

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended

[diff]
    tool = vscode

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[interactive]
    diffFilter = delta --color-only

[merge]
    tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED

